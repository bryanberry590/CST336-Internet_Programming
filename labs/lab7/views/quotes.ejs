<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quote Finder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>

    <h1 class="bg-primary text-center p-4 text-white">Quotes</h1>
    <br>
    <%- include('partials/menu.ejs') %>
    <br>
    <%if(rows.length > 0){%> 
        <%- include('author.ejs') %>
        <% for (let row of rows) {%>
            <div class="d-flex justify-content-center">
                <div class="card" style="width: 35rem;">
                    <div class="card-body">
                        <p><%= row.quote %></p>
                        <p><a href="#" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#authorModal" data-author-id="<%= row.authorId %>">
                        - <%= row.firstName%>  <%= row.lastName%></a></p>
                    </div>
                </div>
            </div>
            <br>
        <% } %>
    <%}%>

    <br>
    <%- include('partials/footer.ejs') %>
    <br>
    
</body>
</html>